{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./src/@types"
    ],
    "types": [
      "@nuxt/types",
      "@types/node",
      "@nuxtjs/axios",
      "jest",
    ]
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
